@model CarRentalMS.Models.Cars

<h2>Delete Car</h2>

<h3>Are you sure you want to delete this car record?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Car ID
        </dt>
        <dd class="col-sm-10">
            @Model.car_id
        </dd>

        <dt class="col-sm-2">
            Plate Number
        </dt>
        <dd class="col-sm-10">
            @Model.car_plate
        </dd>

        <dt class="col-sm-2">
            Car Model
        </dt>
        <dd class="col-sm-10">
            @Model.car_model
        </dd>

        <dt class="col-sm-2">
            Production Year
        </dt>
        <dd class="col-sm-10">
            @Model.car_production_year
        </dd>

        <dt class="col-sm-2">
            Car Brand
        </dt>
        <dd class="col-sm-10">
            @Model.car_brand
        </dd>

        <dt class="col-sm-2">
            Price per Day
        </dt>
        <dd class="col-sm-10">
            @Model.car_price_per_day.ToString("C") <!-- Display car price per day as currency -->
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="car_id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

