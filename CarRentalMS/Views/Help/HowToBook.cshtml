@{
    ViewData["Title"] = "How to Book";
}

<div class="how-to-book-container">
    <h1>How to Book</h1>
    <p>Follow these steps to book your ride:</p>

    <ol class="steps-list">
        <li>Go to the home page and click on <a href="/Cars" class="btn btn-primary">Book Now</a>.</li>
        <li>Select your desired vehicle and rental dates.</li>
        <li>Provide your personal information and payment details.</li>
        <li>Confirm your booking.</li>
    </ol>

    <p class="help-links">
        If you encounter any issues, please visit our
        <a href="/Help/FAQ" class="help-link">FAQ</a> or
        <a href="/Help/ContactUs" class="help-link">Contact Us</a> page for assistance.
    </p>
</div>
